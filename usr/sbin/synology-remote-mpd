#!/usr/bin/env python
"""Simple event device listener"""

import time

from evdev import Device

DEVICE = '/dev/input/event1'


def main():
    dev = Device(DEVICE)
    for event in dev.loop():
        if event.type == 'EV_KEY':
            if event.value == 0:
                # release
                pass
            elif event.value == 1:
                print 'PRESS', event
            elif event.value == 2:
                print 'REPEAT', event


if __name__ == "__main__":
    main()
